<h1> Edit Phone </h1>

<% if @phone.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @phone.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/contacts/<%= @phone.contact_id %>/phones/<%= @phone.contact_id %>/" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="phone_number">Phone number</label>
  <input id="phone_number" name="phone[number]" type="text" value="<%= @phone.number %>">
  <button>Update Phone</button>
</form>
